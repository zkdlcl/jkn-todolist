{
  "openapi": "3.0.0",
  "info": {
    "title": "JKN-TODOLIST API",
    "version": "1.0.0",
    "description": "JKN-TODOLIST API 명세서 - 개인 할일과 공통 일정을 통합 관리하는 스마트 할일 관리 애플리케이션"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local Development Server"
    },
    {
      "url": "https://your-vercel-deployed-url.com/api",
      "description": "Production Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "email": { "type": "string", "format": "email" },
          "name": { "type": "string" },
          "role": { "type": "string", "enum": ["USER", "ADMIN"] },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "Todo": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "user_id": { "type": "integer" },
          "title": { "type": "string" },
          "content": { "type": "string" },
          "start_date": { "type": "string", "format": "date-time" },
          "due_date": { "type": "string", "format": "date-time" },
          "priority": { "type": "string", "enum": ["LOW", "MEDIUM", "HIGH"] },
          "is_completed": { "type": "boolean" },
          "completed_at": { "type": "string", "format": "date-time" },
          "deleted_status": { "type": "string", "enum": ["ACTIVE", "DELETED"] },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "PublicEvent": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "type": { "type": "string", "enum": ["HOLIDAY", "NOTICE", "SOLAR_TERM", "SEASONAL_DAY"] },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "data": {
            "type": "object",
            "properties": {
              "user": { "$ref": "#/components/schemas/User" },
              "accessToken": { "type": "string" },
              "refreshToken": { "type": "string" }
            }
          }
        }
      },
      "CalendarData": {
        "type": "object",
        "properties": {
          "todos": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Todo" }
          },
          "publicEvents": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/PublicEvent" }
          }
        }
      }
    }
  },
  "paths": {
    "/auth/signup": {
      "post": {
        "summary": "회원가입",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password", "name"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 8 },
                  "name": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "회원가입 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          },
          "400": { "description": "잘못된 요청 (유효성 검사 실패)" },
          "409": { "description": "이미 존재하는 이메일" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "로그인",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          },
          "401": { "description": "인증 실패 (이메일 또는 비밀번호 불일치)" }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "로그아웃",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["refreshToken"],
                "properties": {
                  "refreshToken": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "로그아웃 성공" },
          "401": { "description": "인증 실패" }
        }
      }
    },
    "/todos": {
      "get": {
        "summary": "할일 목록 조회",
        "tags": ["Todos"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "is_completed",
            "in": "query",
            "schema": { "type": "boolean" },
            "description": "완료 여부 필터링"
          },
          {
            "name": "priority",
            "in": "query",
            "schema": { "type": "string", "enum": ["LOW", "MEDIUM", "HIGH"] },
            "description": "우선순위 필터링"
          },
          {
            "name": "sort",
            "in": "query",
            "schema": { "type": "string", "default": "created_at" },
            "description": "정렬 기준 필드"
          },
          {
            "name": "order",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["ASC", "DESC"],
              "default": "DESC"
            },
            "description": "정렬 순서"
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Todo" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "할일 생성",
        "tags": ["Todos"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title"],
                "properties": {
                  "title": { "type": "string" },
                  "content": { "type": "string" },
                  "start_date": { "type": "string", "format": "date-time" },
                  "due_date": { "type": "string", "format": "date-time" },
                  "priority": {
                    "type": "string",
                    "enum": ["LOW", "MEDIUM", "HIGH"],
                    "default": "MEDIUM"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": { "$ref": "#/components/schemas/Todo" }
                  }
                }
              }
            }
          },
          "400": { "description": "잘못된 요청" }
        }
      }
    },
    "/todos/{id}": {
      "get": {
        "summary": "할일 상세 조회",
        "tags": ["Todos"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": { "$ref": "#/components/schemas/Todo" }
                  }
                }
              }
            }
          },
          "404": { "description": "할일을 찾을 수 없음" }
        }
      },
      "patch": {
        "summary": "할일 수정",
        "tags": ["Todos"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "content": { "type": "string" },
                  "start_date": { "type": "string", "format": "date-time" },
                  "due_date": { "type": "string", "format": "date-time" },
                  "priority": {
                    "type": "string",
                    "enum": ["LOW", "MEDIUM", "HIGH"]
                  },
                  "is_completed": { "type": "boolean" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "수정 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": { "$ref": "#/components/schemas/Todo" }
                  }
                }
              }
            }
          },
          "404": { "description": "할일을 찾을 수 없음" }
        }
      },
      "delete": {
        "summary": "할일 삭제 (Soft Delete)",
        "tags": ["Todos"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "삭제 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" },
                    "data": { "$ref": "#/components/schemas/Todo" }
                  }
                }
              }
            }
          },
          "404": { "description": "할일을 찾을 수 없음" }
        }
      }
    },
    "/todos/trash/all": {
      "get": {
        "summary": "휴지통 목록 조회",
        "tags": ["Trash"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Todo" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/todos/{id}/restore": {
      "patch": {
        "summary": "할일 복구",
        "tags": ["Trash"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "복구 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" },
                    "data": { "$ref": "#/components/schemas/Todo" }
                  }
                }
              }
            }
          },
          "404": { "description": "할일을 찾을 수 없음" }
        }
      }
    },
    "/todos/{id}/permanent": {
      "delete": {
        "summary": "할일 영구 삭제",
        "tags": ["Trash"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "영구 삭제 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "404": { "description": "할일을 찾을 수 없음" }
        }
      }
    },
    "/calendar/{year}/{month}": {
      "get": {
        "summary": "달력 데이터 조회 (할일 및 공공 일정)",
        "tags": ["Calendar"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "year",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" },
            "description": "년도 (예: 2025)"
          },
          {
            "name": "month",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "minimum": 1, "maximum": 12 },
            "description": "월 (1-12)"
          }
        ],
        "responses": {
          "200": {
            "description": "달력 데이터 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": { "$ref": "#/components/schemas/CalendarData" }
                  }
                }
              }
            }
          },
          "400": { "description": "잘못된 년/월 값" },
          "500": { "description": "서버 내부 오류" }
        }
      }
    },
    "/sync/holidays": {
      "post": {
        "summary": "공휴일 데이터 동기화 (관리자용)",
        "tags": ["Sync"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "year": { "type": "integer", "description": "동기화할 연도 (선택사항, 기본값: 올해)" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "공휴일 동기화 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "created": { "type": "integer", "description": "생성된 이벤트 수" },
                        "updated": { "type": "integer", "description": "업데이트된 이벤트 수" },
                        "skipped": { "type": "integer", "description": "스킵된 이벤트 수" }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "500": { "description": "동기화 실패" }
        }
      }
    },
    "/cron/weekly-sync": {
      "get": {
        "summary": "주간 동기화 (올해 데이터 갱신)",
        "tags": ["Cron"],
        "description": "Vercel Cron을 사용한 자동화 작업 - 임시공휴일 등 반영",
        "responses": {
          "200": {
            "description": "주간 동기화 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "500": { "description": "동기화 실패" }
        }
      }
    },
    "/cron/annual-sync": {
      "get": {
        "summary": "연간 동기화 (내후년 데이터 확보)",
        "tags": ["Cron"],
        "description": "Vercel Cron을 사용한 자동화 작업 - 내후년 데이터 미리 확보",
        "responses": {
          "200": {
            "description": "연간 동기화 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "500": { "description": "동기화 실패" }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "서버 상태 확인",
        "tags": ["Health"],
        "description": "서버가 정상적으로 작동 중인지 확인",
        "responses": {
          "200": {
            "description": "서버 정상 작동",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "OK" },
                    "message": { "type": "string", "example": "Server is running" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}